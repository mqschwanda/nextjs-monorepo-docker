{
  "extends": "@mqs/tsconfig/react-library.json",
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "__tests__"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "lib": [
      "ES2015"
    ],
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es6",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "components": [
        "src/components"
      ]
    }
  },
}
