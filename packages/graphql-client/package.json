{
  "name": "@mqs/graphql-client",
  "version": "0.0.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "codegen": "graphql-codegen",
    "codegen:watch": "yarn codegen --watch",
    "build": "yarn codegen && yarn build-tsc",
    "build-tsc": "mqs-tsc --project tsconfig.build.json",
    "build-tsc:watch": "mqs-tsc-watch --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "yarn build && concurrently \"yarn codegen:watch\" \"yarn build-tsc:watch\"",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@mqs/eslint-config": "*",
    "@mqs/tsc": "*",
    "@mqs/tsconfig": "*",
    "concurrently": "^8.2.0",
    "eslint": "^7.32.0",
    "glob": "^10.3.3",
    "jest": "^29.6.1",
    "react": "^18.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "@graphql-yoga/apollo-link": "^1.8.1",
    "@mqs/graphql-schema": "*",
    "graphql": "^16.7.1",
    "graphql-tag": "^2.12.6"
  }
}
