{
  "extends": "@mqs/tsconfig/react-library.json",
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "ES2015"
    ],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "components": [
        "src/components"
      ],
      "utilities/*": [
        "src/utilities/*"
      ],
      "utilities": [
        "src/utilities"
      ]
    }
  }
}
