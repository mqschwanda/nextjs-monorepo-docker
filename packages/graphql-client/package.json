{
  "name": "@mqs/graphql-client",
  "version": "0.0.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "codegen": "graphql-codegen **/*.graphql",
    "codegen:watch": "yarn codegen --watch",
    "build": "yarn codegen && yarn build-tsc",
    "build-tsc": "tsc",
    "build-tsc:watch": "yarn build -w",
    "clean": "rm -rf dist",
    "dev": "yarn build && concurrently \"yarn codegen:watch\" \"yarn build-tsc:watch\"",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "concurrently": "^8.0.1",
    "eslint": "^7.32.0",
    "@mqs/eslint-config-codegen": "*",
    "@mqs/eslint-config-custom": "*",
    "glob": "^10.2.3",
    "react": "^18.2.0",
    "@mqs/tsconfig": "*",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@apollo/client": "^3.7.13",
    "graphql": "^16.6.0",
    "@mqs/graphql-schema": "*"
  }
}
