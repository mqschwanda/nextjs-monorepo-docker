{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "PORT"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_API_HOST",
        "JWT_SECRET",
        "NODE_ENV"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts"
      ],
      "outputMode": "full",
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/dist/**"
      ],
      "persistent": false
    },
    "clean": {
      "cache": false,
      "outputMode": "full",
      "persistent": false
    },
    "codegen": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "codegen.ts"
      ],
      "outputMode": "full",
      "outputs": [
        "**/__generated__/**"
      ],
      "persistent": false
    },
    "codegen:watch": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "codegen.ts"
      ],
      "outputMode": "full",
      "outputs": [
        "**/__generated__/**"
      ],
      "persistent": true
    },
    "dev": {
      "cache": false,
      "env": [
        "JWT_SECRET",
        "NODE_ENV"
      ],
      "outputMode": "full",
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputMode": "full",
      "persistent": false
    },
    "lint:fix": {
      "dependsOn": [
        "^build"
      ],
      "outputMode": "full",
      "persistent": false
    },
    "test": {
      "dependsOn": [],
      "outputMode": "full",
      "outputs": [
        "coverage/**",
        "**/__snapshots__/**"
      ],
      "persistent": false
    }
  }
}
